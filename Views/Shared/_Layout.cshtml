<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Home Page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AddressBook.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="bg-blue p-3 text-light text-large font-mono"> Address Book </div>
        <nav class="bg-dark py-2 px-3 d-flex justify-content-between">
            <div>
                <a class="text-light text-small font-weight-bold" asp-area="" asp-controller="PersonDetails" asp-action="Index"> HOME </a>
                <a class="text-light text-small font-weight-bold px-4" asp-area="" asp-controller="PersonDetails" asp-action="Create"> +ADD </a>
            </div>
            <img src="~/components/blog-icon.png"/>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

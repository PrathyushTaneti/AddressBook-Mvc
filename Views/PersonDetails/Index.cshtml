@model IEnumerable<AddressBook.Models.PersonDetail> ;

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid">
    <div class="container-fluid mt-4 d-flex">
        <div class="container w-25 hover" id="personDetails">
            <h5 class="font-weight-bold mb-3">CONTACTS</h5>
            @foreach (var item in Model)
            {
                <div class="border p-3 person">
                    <p class="text-medium mb-0"> @Html.DisplayFor(modelItem => item.Name)</p> <br>
                    <p class="mb-0">
                        @Html.DisplayFor(modelItem => item.Email) <br>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </p>
                </div>
            }
        </div>
        <div class="container w-75 p-5 d-flex" id="displayPersonDetails">
            <div>
                <h1 class="mb-3" id="personName">Abdul</h1>
                <div class="mb-3" id="personEmailAddress">prathyushtaneti@gmail.com</div>
                <div  class="mb-3" id="mobileNumber"> 9493119495 </div>
                <div class="d-flex"> <div>Address : </div> <div> LIG-612,Bharathinagar,Bhel,Rcpuram, <br />Hyderabad - 502032 </div> </div>
            </div>
            <div class="d-flex align-items-baseline pt-3">
                <a id="editButton" href="/PersonDetails/Edit/Abdul" class="text-dark d-flex align-items-center me-2"> <img src="~/components/Edit-icon.png" width="15">  &nbsp; EDIT </a> &nbsp; &nbsp;
                <a id="deleteButton" href="/PersonDetails/Delete/Abdul" class="text-dark d-flex align-items-center"> <img src="~/components/delete1.png"   > &nbsp; DELETE </a>
            </div>

        </div>
    </div>
</section>

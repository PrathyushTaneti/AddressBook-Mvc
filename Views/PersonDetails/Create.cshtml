@model AddressBook.Models.PersonDetail;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <form asp-action="Create" class="shadow p-5 m-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label font-weight-bold"></label>
                <input asp-for="Name" class="form-control border border-dark rounded" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div> <br />
            <div class="form-group">
                <label asp-for="Email" class="control-label font-weight-bold"></label>
                <input asp-for="Email" class="form-control border border-dark rounded" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div> <br />
            <div class="d-flex justify-content-between form-group">
                <div>
                    <label asp-for="Mobile" class="control-label font-weight-bold"></label> <br />
                    <input asp-for="Mobile" class="form-control border border-dark rounded" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Landline" class="control-label font-weight-bold"></label> <br />
                    <input asp-for="Landline" class="form-control border border-dark rounded" />
                    <span asp-validation-for="Landline" class="text-danger"></span>
                </div>
            </div> <br />
            <div class="form-group">
            </div> <br />
            <div class="form-group">
                <label asp-for="Website" class="control-label font-weight-bold"></label>
                <input asp-for="Website" class="form-control border border-dark rounded" />
                <span asp-validation-for="Website" class="text-danger"></span>
            </div> <br />
            <div class="form-group">
                <label asp-for="Address" class="control-label font-weight-bold"></label>
                <input asp-for="Address" class="form-control border border-dark rounded h-5" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div> <br />
            <div class="form-group pt-2 d-flex justify-content-end">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Back to List</a>*@
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
